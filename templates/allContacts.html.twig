{% extends 'base.html.twig' %}

{% block body %}

{% for message in app.flashes('success') %}

	<div class="alert alert-success alert-dismissible fade show" role="alert" style="text-align:center">
		{{ message }}
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
	</div>


{% endfor %}


<div class="row">
    <div class="col d-flex justify-content-end" style="margin:2rem 2rem">
        <a href="{{path("newContact")}}">Create new contact</a>
    </div>
</div>

<div class="d-flex justify-content-center" style="margin: 1rem 5rem 1rem 5rem">

<table class="table">
	<thead>
		<tr>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Phone Number</th>
            <th>Email</th>
            <th>Note</th>
		</tr>
	</thead>
	<tbody>

		
        {% for contact in contacts %}
        <tr>
            <td>{{contact.firstName}}</td>
            <td>{{contact.lastName}}</td>
            <td>{{contact.phone}}</td>
            <td>{{contact.email}}</td>
            <td>{{contact.note}}</td>
            <td>
                <a href="{{path("updateContact", {id: contact.id, lastName: contact.lastName})}}">
                    <i class="bi bi-pencil-square"></i>
                </a>
                <br>
                <a href="{{path("deleteContact", {id: contact.id})}}">
                    <i class="bi bi-trash-fill"></i>
                </a>
                <br>
                <a href="{{path("contactId", {id: contact.id})}}">Details</a>

            </td>
        </tr>

        {% endfor %}
			
	</tbody>
</table>

</div>
<div class="d-flex justify-content-center" style="margin: 1rem 5rem 1rem 5rem">

<nav aria-label="Page navigation example">
	<ul class="pagination">
		<li class="page-item">
			<a class="page-link" href="#">Previous</a>
		</li>
		<li class="page-item">
			<a class="page-link" href="#">1</a>
		</li>
		<li class="page-item">
			<a class="page-link" href="#">2</a>
		</li>
		<li class="page-item">
			<a class="page-link" href="#">3</a>
		</li>
		<li class="page-item">
			<a class="page-link" href="#">Next</a>
		</li>
	</ul>
</nav>
</div>
{% endblock %}