{% extends 'base.html.twig' %}


{% block body %}

<div class="row">
	<div class="col d-flex justify-content-end" style="margin:2rem 0">
		<a href="{{path("contacts")}}">Go back</a>
	</div>
</div>


<table class="table">
	<thead>
		<tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone Number</th>
            <th>Email</th>
            <th>Note</th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<td>{{firstName}}</td>
            <td>{{lastName}}</td>
            <td>{{phone}}</td>
            <td>{{email}}</td>
            <td>{{note}}</td>

		</tr>
	</tbody>
</table>


{% endblock %}